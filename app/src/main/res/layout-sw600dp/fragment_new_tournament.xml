<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stadium_phone"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".fragments.StartNewTournamentFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Tournament Form"
        android:padding="10sp"
        android:fontFamily="@font/roboto"
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        >

    </TextView>
</LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Name"
    android:padding="10sp"
    android:fontFamily="@font/roboto"
    android:paddingLeft="10dp"
    android:textColor="@color/white"
    android:textSize="16sp"
    android:textStyle="bold">

</TextView>
                <EditText
                    android:singleLine="true"
                    android:id="@+id/team1"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:textColor="@color/black"
                    android:background="@drawable/rounded_sides_white"
                    android:paddingLeft="10dp"
                    ></EditText>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Overs"
                    android:padding="10sp"
                    android:fontFamily="@font/roboto"
                    android:paddingLeft="10dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="50dp"
                    >

                </TextView>
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_sides_white"
                    android:weightSum="3">

                    <TextView
                        android:id="@id/five_overs"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/right_circular_background_blue_20"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="@color/white"
                        android:textSize="16sp"></TextView>


                    <TextView
                        android:id="@+id/ten_overs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"

                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:text="10"
                        android:textColor="@color/black"
                        android:textSize="16sp"></TextView>


                    <TextView
                        android:id="@+id/twenty_overs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:text="20"
                        android:textColor="@color/black"
                        android:textSize="16sp"></TextView>



                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
 <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Teams"
    android:padding="10sp"
    android:fontFamily="@font/roboto"
    android:paddingLeft="10dp"
    android:textColor="@color/white"
    android:textSize="16sp"
    android:textStyle="bold">

</TextView>

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="40dp"

                        android:background="@drawable/rounded_sides_white"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/first_team_playing"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/right_circular_background_blue_20"
                            android:fontFamily="@font/roboto"
                            android:gravity="center"
                            android:text="3"
                            android:textColor="@color/white"
                            android:textSize="16sp"></TextView>

                        <TextView
                            android:id="@+id/second_team_playing"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_sides_white"
                            android:fontFamily="@font/roboto"
                            android:gravity="center"
                            android:text="4"
                            android:textColor="@color/black"
                            android:textSize="16sp"></TextView>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Team 1"
        android:padding="10sp"
        android:fontFamily="@font/roboto"
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold">

    </TextView>
    <EditText
        android:singleLine="true"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:background="@drawable/rounded_sides_white"
        android:paddingLeft="10dp"
        ></EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team 2"
            android:padding="10sp"
            android:fontFamily="@font/roboto"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold">

        </TextView>
        <EditText
            android:singleLine="true"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:background="@drawable/rounded_sides_white"
            android:paddingLeft="10dp"
            ></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team 3"
            android:padding="10sp"
            android:fontFamily="@font/roboto"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold">

        </TextView>
        <EditText
            android:singleLine="true"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:background="@drawable/rounded_sides_white"
            android:paddingLeft="10dp"
            ></EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team 4"
            android:padding="10sp"
            android:fontFamily="@font/roboto"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold">

        </TextView>
        <EditText
            android:singleLine="true"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:background="@drawable/rounded_sides_white"
            android:paddingLeft="10dp"
            ></EditText>
    </LinearLayout>

</LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/start_game"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_sides_orange_stroked_white"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="START Tournament!!!"
                    android:textColor="@color/white"

                    ></TextView>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>

