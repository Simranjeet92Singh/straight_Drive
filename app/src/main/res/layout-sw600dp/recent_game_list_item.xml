<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="5"

    android:layout_marginBottom="1dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="left"
        android:paddingLeft="20dp"
        >
        <TextView
            android:id="@+id/recent_team1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="17dp"
            android:text="Team A"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black">

        </TextView>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="left"
        android:layout_marginLeft="5dp"
        >
        <TextView
            android:id="@+id/recent_team2"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="17dp"
            android:text="Team B"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="left">

        <TextView
            android:id="@+id/recent_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="2021-1-12"
            android:textColor="@color/text_dark_blue"
            android:textSize="17dp">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="left">
        <TextView
            android:id="@+id/recent_score"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="17dp"
            android:text="45/3  |  75/3"
            android:fontFamily="@font/roboto"
            android:textColor="@color/text_oraange">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:background="@drawable/rounded_sides_blue"
                android:id="@+id/view_game"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="View"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"
                android:gravity="center"
                android:padding="5dp"
                ></Button>

            <ImageView
                android:id="@+id/rematch"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="7dp"
                android:background="@drawable/rounded_side_orange"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:padding="5dp"
                android:src="@drawable/plus_icon_white_50"
                android:textColor="@color/white"></ImageView>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
    </androidx.cardview.widget.CardView></LinearLayout>